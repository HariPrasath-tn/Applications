<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.rio.agecalculator.view_model.AgeCalculatorFragmentViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.age_calculator_activity_fragments.AgeCalculatorFragment"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="78dp"
                android:src="@drawable/icon" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="307dp"
                android:layout_height="77dp"
                android:fontFamily="serif"
                android:paddingStart="10dp"
                android:paddingTop="15dp"
                android:text="@string/age_calculator"
                android:textAlignment="viewStart"
                android:textColor="#F3292D54"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

        </LinearLayout>


        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="match_parent"
            android:layout_height="652dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="130dp"
                        android:layout_height="34dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="32dp"
                        android:layout_weight="1"
                        android:text="@string/date_of_birth"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold|italic"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/textView2">

                        <EditText
                            android:id="@+id/yearGiven"
                            android:layout_width="60dp"
                            android:layout_height="46dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="36dp"
                            android:ems="10"
                            android:hint="YYYY"
                            android:inputType="number"
                            android:maxLength="4"
                            android:text="@={viewModel.startYear}"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textSize="35sp"
                            tools:layout_editor_absoluteX="85dp"
                            tools:layout_editor_absoluteY="221dp" />

                        <EditText
                            android:id="@+id/monthGiven"
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:layout_gravity="center"
                            android:ems="10"
                            android:hint="MM"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textSize="20sp"
                            android:text="@={viewModel.startMonth}"/>


                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textSize="35sp"
                            tools:layout_editor_absoluteX="85dp"
                            tools:layout_editor_absoluteY="221dp" />

                        <EditText
                            android:id="@+id/dayGiven"
                            android:layout_width="41dp"
                            android:layout_height="46dp"
                            android:layout_gravity="center"
                            android:ems="10"
                            android:hint="DD"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textSize="20sp"
                            android:text="@={viewModel.startDate}"/>

                        <EditText
                            android:id="@+id/hourGiven"
                            android:layout_width="36dp"
                            android:layout_height="46dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="16dp"
                            android:ems="10"
                            android:hint="hh"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textSize="20sp"
                            android:text="@={viewModel.startHour}"/>

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textSize="32sp"
                            tools:layout_editor_absoluteX="85dp"
                            tools:layout_editor_absoluteY="221dp" />

                        <EditText
                            android:id="@+id/minuteGiven"
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:layout_gravity="center"
                            android:ems="10"
                            android:hint="mm"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textSize="20sp"
                            android:text="@={viewModel.startMinute}"/>

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textSize="32sp"
                            tools:layout_editor_absoluteX="85dp"
                            tools:layout_editor_absoluteY="221dp" />

                        <EditText
                            android:id="@+id/secondGiven"
                            android:layout_width="36dp"
                            android:layout_height="46dp"
                            android:layout_gravity="center"
                            android:ems="10"
                            android:hint="ss"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textSize="20sp"
                            android:text="@={viewModel.startSecond}"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="130dp"
                        android:layout_height="34dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="30dp"
                        android:text="@string/age_at_date"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold|italic"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/linearLayout2" />

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="237dp"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="@+id/textView3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView3">

                        <RadioButton
                            android:id="@+id/radioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="current data" />

                        <RadioButton
                            android:id="@+id/radioButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="Select Date" />
                    </RadioGroup>


                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/textView3">

                        <EditText
                            android:id="@+id/yearCurrent"
                            android:layout_width="60dp"
                            android:layout_height="46dp"
                            android:layout_marginStart="40dp"
                            android:ems="10"
                            android:hint="YYYY"
                            android:inputType="number"
                            android:maxLength="4"
                            android:textSize="20sp"
                            android:text="@={viewModel.currentYear}"/>

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textSize="35sp"
                            tools:layout_editor_absoluteX="85dp"
                            tools:layout_editor_absoluteY="221dp" />

                        <EditText
                            android:id="@+id/monthCurrent"
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:ems="10"
                            android:hint="MM"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textSize="20sp"
                            android:text="@={viewModel.currentMonth}" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textSize="35sp"
                            tools:layout_editor_absoluteX="85dp"
                            tools:layout_editor_absoluteY="221dp" />

                        <EditText
                            android:id="@+id/dayCurrent"
                            android:layout_width="41dp"
                            android:layout_height="46dp"
                            android:ems="10"
                            android:hint="DD"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textSize="20sp"
                            android:text="@={viewModel.currentDate}" />

                        <EditText
                            android:id="@+id/hourCurrent"
                            android:layout_width="36dp"
                            android:layout_height="46dp"
                            android:layout_marginStart="16dp"
                            android:ems="10"
                            android:hint="hh"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textSize="20sp"
                            android:text="@={viewModel.currentHour}" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textSize="32sp"
                            tools:layout_editor_absoluteX="85dp"
                            tools:layout_editor_absoluteY="221dp" />

                        <EditText
                            android:id="@+id/min_current"
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:ems="10"
                            android:hint="mm"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textSize="20sp"
                            android:text="@={viewModel.currentMinute}" />

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textSize="32sp"
                            tools:layout_editor_absoluteX="85dp"
                            tools:layout_editor_absoluteY="221dp" />

                        <EditText
                            android:id="@+id/s_current"
                            android:layout_width="36dp"
                            android:layout_height="46dp"
                            android:ems="10"
                            android:hint="ss"
                            android:inputType="number"
                            android:maxLength="2"
                            android:textSize="20sp"
                            android:text="@={viewModel.currentSecond}" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="124dp"
                        android:text="Confirm"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textStyle="italic"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.498"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView3" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="138dp"
                        android:layout_height="47dp"
                        android:layout_marginTop="62dp"
                        android:text="Age is"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textStyle="bold|italic"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/confirm" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginStart="8dp"
                        android:text="@{viewModel.dateResult}"
                        android:textAlignment="center"
                        android:textSize="24sp"
                        android:textStyle="italic"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView4" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="51dp"
                        android:text="@{viewModel.timeResult}"
                        android:textAlignment="center"
                        android:textSize="40sp"
                        android:textStyle="italic"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView5" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</layout>